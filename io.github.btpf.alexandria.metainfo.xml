<component type="desktop-application">
  <id>io.github.btpf.alexandria</id>


  <name>Alexandria</name>
  <summary>A minimalistic eBook reader</summary>
  <developer_name>Bret Papkoff</developer_name>

  <metadata_license>MIT</metadata_license>
  <project_license>GPL-3.0+</project_license>

  <url type="homepage">https://github.com/btpf/Alexandria</url>
  <url type="bugtracker">https://github.com/btpf/Alexandria/issues</url>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <description>
    <p>
      Alexandria is a minimalistic Ebook Reader supporting Epub, Kindle Format, ComicBook Format, and more.
      Features Include:
    </p>
    <ul>
      <li> Highlights, annotations, and bookmarks </li>
      <li> Custom themes and fonts </li>
      <li> Single-column, two-column, or continuous scrolling layouts </li>
      <li> Split screen reading of two books </li>
    </ul>
    
  </description>

